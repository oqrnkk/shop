{
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.4"
    }
  },
  "rewrites": [
    { "source": "/assets/(.*)", "destination": "/assets/$1" },
    { "source": "/images/(.*)", "destination": "/images/$1" },
    { "source": "/uploads/(.*)", "destination": "/uploads/$1" },

    { "source": "/api/assets/(.*)", "destination": "/assets/$1" },
    { "source": "/api/images/(.*)", "destination": "/images/$1" },
    { "source": "/api/uploads/(.*)", "destination": "/uploads/$1" },

    { "source": "/(.*)", "destination": "/api/index.php?page=$1" }
  ]
}
